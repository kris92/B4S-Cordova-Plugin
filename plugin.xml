<plugin id="com.ezeeworld.b4s.sdk"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        version="1.2.0">

    <name>Neerby SDK Plugin</name>
    <description>Neerby SDK integration for Cordova</description>
    <keywords>B4S Neerby</keywords>
    <repo>https://github.com/kris92/B4S-Cordova-Plugin.git</repo>
    <license>Apache 2.0</license>
    <author>Ezeeworld</author>

    <!-- cordova -->
    <engines>
        <engine name="cordova" version=">=3.6.0" />
    </engines>

    <!-- plugin.xml -->

    <dependency id="cordova-plugin-app-event" url="https://github.com/katzer/cordova-plugin-app-event.git"  />

    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="B4SSDK">
                <param name="ios-package" value="B4SSDK" />
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <!-- The app is able to run in background through networkd fetch mode -->
        <config-file target="*-Info.plist" parent="UIBackgroundModes">
            <array>
                <string>fetch</string>
            </array>
        </config-file>

        <header-file src="src/ios/B4SSDK.h" />
        <source-file src="src/ios/B4SSDK.m" />

        <framework src="libsqlite3.tbd" />
        <resource-file src="src/ios/BeaconForStoreStorage.bundle" />
        <framework src="src/ios/BeaconForStoreSDK.framework" custom="true" />

        <preference name="LOCATION_ALWAYS_USAGE_DESCRIPTION" default="This mode is requested to enable the detection of Neerby iBeacon." />
        <config-file target="*-Info.plist" parent="NSLocationAlwaysUsageDescription">
            <string>$LOCATION_ALWAYS_USAGE_DESCRIPTION</string>
        </config-file>
    </platform>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="B4SSDK" >
                <param name="android-package" value="org.apache.cordova.b4s.B4SSDK"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
            <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
            <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"/>
        </config-file>


        <config-file target="AndroidManifest.xml" parent="/*">
            <application>
                <!-- Background monitoring for beacons -->
                <service
                    android:name="com.ezeeworld.b4s.android.sdk.monitor.MonitoringManager" >
                    <intent-filter>
                        <action android:name="com.ezeeworld.b4s.android.sdk.monitor.B4S_ENSURE_SCANNING" />
                        <action android:name="com.ezeeworld.b4s.android.sdk.monitor.B4S_QUERY_SCHEDULE" />
                        <action android:name="com.ezeeworld.b4s.android.sdk.monitor.B4S_SCHEDULE_RESULT" />
                        <action android:name="com.ezeeworld.b4s.android.sdk.monitor.B4S_QUERY_VERSION" />
                        <action android:name="com.ezeeworld.b4s.android.sdk.monitor.B4S_REPORT_VERSION" />
                    </intent-filter>
                </service>
                <service
                    android:name="com.ezeeworld.b4s.android.sdk.monitor.InteractionService" >
                    <intent-filter>
                        <action android:name="com.ezeeworld.b4s.android.sdk.monitor.B4S_OBSERVATIONS" />
                        <!-- To be uncommented for Beacon update support  -->
                        <action android:name="com.ezeeworld.b4s.android.sdk.monitor.B4S_BEACONS" />
                    </intent-filter>
                </service>

                <activity
                    android:name="com.ezeeworld.b4s.android.sdk.monitor.WebViewInteractionActivity"
                    android:configChanges="orientation|keyboardHidden"
                    android:noHistory="true" />

                <receiver android:name="com.ezeeworld.b4s.android.sdk.monitor.SystemEventReceiver">
                    <intent-filter>
                        <action android:name="android.intent.action.ACTION_USER_PRESENT" />
                        <action android:name="android.intent.action.BOOT_COMPLETED" />
                    </intent-filter>
                </receiver>

                <!-- Push messaging -->
                <receiver
                    android:name="com.google.android.gms.gcm.GcmReceiver"
                    android:permission="com.google.android.c2dm.permission.SEND">
                    <intent-filter>
                        <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                        <category android:name="${applicationId}" />
                    </intent-filter>
                </receiver>
            </application>
        </config-file>

        <source-file src="src/android/B4SSDK.java" target-dir="src/org/apache/cordova/b4s" />
        <lib-file src="src/android/libs/b4s-android-sdk-playservices921.aar" target-dir="libs" />
        <lib-file src="src/android/libs/b4s-android-sdk.aar" target-dir="libs" />

        <framework src="nl.qbusict:cupboard:2.1.4" />
        <framework src="de.greenrobot:eventbus:2.4.0" />
        <framework src="com.squareup.retrofit2:converter-jackson:2.0.0" />
        <framework src="com.google.android.gms:play-services-location:9.2.1" />
        <framework src="com.google.android.gms:play-services-ads:9.2.1" />
        <framework src="com.google.android.gms:play-services-gcm:9.2.1" />

        <framework src="src/android/b4s.gradle" custom="true" type="gradleReference" />

        <js-module src="www/B4SSDKHandle.js" name="b4sSDK">
            <clobbers target="b4sSDK" />
        </js-module>
    </platform>

</plugin>
